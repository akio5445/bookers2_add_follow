<% @user.followings.each do |user| %>
<div class="col-xs-offset-3">
  <div class="col-xs-8">
    <table class="table">
      <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
      <tr>
        <td>name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr><hr>
        <td><%= link_to 'show', user_path(user) %></td>
      </tr>
    </table>
  </div>
</div>
<% end %>